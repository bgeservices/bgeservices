  "author": "Geno Roupsky <geno@roupsky.name> (https://github.com/groupsky)",
  "license": "ISC",
  "devDependencies": {
    "aliasify": "^2.1.0",
    "browserify-hmr": "^0.3.5",
    "budo": "^9.4.5",
    "envify": "^4.0.0",
    "gh-pages": "^0.12.0",
    "less": "^2.7.2",
    "mkdirp": "^0.5.1",
    "rimraf": "^2.5.4",
    "standard": "^8.6.0",
    "uglify-js": "^2.7.5",
    "uglifyify": "^3.0.4"
  },
  "dependencies": {
    "bootstrap-vue": "^0.15.6",
    "bulk-require": "^1.0.0",
    "bulkify": "^1.4.2",
    "cp-cli": "^1.0.2",
    "cross-env": "^4.0.0",
    "dialog-polyfill": "^0.4.7",
    "events": "^1.1.1",
    "inherits": "^2.0.3",
    "lodash": "^4.17.4",
    "minifyify": "^7.3.4",
    "moment": "^2.17.1",
    "raven-js": "^3.12.0",
    "semver": "^5.3.0",
    "v-tooltip": "^1.1.6",
    "vue": "^2.1.10",
    "vue-router": "^2.5.3",
    "vueify": "^9.4.0"
  },
  "browser": {
    "vue": "vue/dist/vue.common.js"
  },
  "browserify": {
    "transform": [
      "vueify",
      "bulkify"
    ]
  },
  "scripts": {
    "clean": "rimraf build",
    "prebuild": "mkdirp build",
    "build": "npm run build:static && npm run build:js",
    "build:static": "cp-cli public build",
    "build:js": "cross-env NODE_ENV=production browserify -g envify -p [ vueify/plugins/extract-css -o build/styles.css ] --debug -e index.js | uglifyjs -c warnings=false -m > build/index.js",
    "deploy": "gh-pages -d build -t -o gh-pages -b master",
    "dev": "budo index.js --live -d public -- -p browserify-hmr -t aliasify",
    "test": "echo \"Error: no test specified\" && exit 1"
  }
}
